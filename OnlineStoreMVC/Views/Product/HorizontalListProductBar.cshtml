@model IEnumerable<OnlineStore.Model.ViewModel.ProductSummaryView>
@{
    string Title = ViewData["Title"] != null ? (string)ViewData["Title"] : String.Empty;
}
<link href="~/Content/display-product/horizontal-list-product-bar.css" rel="stylesheet" />
<div class="wrap">
    <h3 class="productscategory_h3 page-product-heading">
        @Title
    </h3>
    <div class="scrollbar">
        <div class="handle">
            <div class="mousearea"></div>
        </div>
    </div>
    <div class="frame" id="centered">
        <ul class="clearfix">
            @foreach (var item in @Model)
            {
                <li class="product-box item product-box-horizontal-list-product-bar" style="float: left; list-style: none; position: relative; margin-right: 20px;">
                    <a href="/Product/ProductDetails/@item.Id" class="lnk_img product-image product-image-horizontal-list-product-bar" title="@item.Name">
                        <img src='@item.CoverImageUrl' alt="@item.Name" title="@item.Name">
                    </a>
                    <h5 itemprop="name" class="product-name">
                        <a href="/Product/ProductDetails/@item.Id" title="@item.Name">@item.Name</a>
                    </h5>
                </li>
            }
        </ul>
    </div>
</div>
<script>
    (function () {
        var $frame = $('#centered');
        var $wrap = $frame.parent();

        // Call Sly on frame
        $frame.sly({
            horizontal: 1,
            itemNav: 'centered',
            smart: 1,
            activateOn: 'click',
            mouseDragging: 1,
            touchDragging: 1,
            releaseSwing: 1,
            startAt: 4,
            scrollBar: $wrap.find('.scrollbar'),
            scrollBy: 1,
            speed: 300,
            elasticBounds: 1,
            easing: 'easeOutExpo',
            dragHandle: 1,
            dynamicHandle: 1,
            clickBar: 1,
        });
    }());
</script>    