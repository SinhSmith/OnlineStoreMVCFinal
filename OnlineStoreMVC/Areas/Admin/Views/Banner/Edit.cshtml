@model OnlineStore.Model.ViewModel.BannerViewModel

@{
    ViewBag.Title = "Cập nhật banner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script>
    $(function () {
        //Date range picker
        $('#txtStartEndDate').daterangepicker({ format: 'DD/MM/YYYY' });
    });
</script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Danh mục banner
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Cập nhật banner</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("Edit", "Banner", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.ImageId)
                        
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <label class="control-label col-md-2" for="Name">Tên banner</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="ImageBanner">Ảnh banner</label>
                                <div class="col-md-10">
                                    <img src="@(Model.ImagePath)" />
                                    <input type="file" id="ImageBanner" name="uploadFile" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Loại</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("Type", ViewBag.BannerTypes as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Thời hạn <small>(Chỉ dùng cho loại Popup)</small></label>
                                <div class="col-md-10 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.StartEndDate, new { htmlAttributes = new { @class = "form-control pull-right", @id = "txtStartEndDate" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Thứ tự</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="Status">Tình trạng</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("Status", ViewBag.Status as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                    @Html.ActionLink("Quay lại danh sách", "Index", "Banner", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>